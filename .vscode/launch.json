{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Playwright Tests",
            "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
            "args": [
                "test",
                "-g",
                "Code and Prompt(?!\\d)",
                "--headed",
                "--workers",
                "1"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
    ]
}